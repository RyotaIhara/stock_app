<p id="notice"><%= notice %></p>
<h1 class="label">ログイン機能</h1>

<%= form_with url: sessions_path do |form| %>
    <div class="form-group row">
      <%= form.label :ユーザー名, class: "col-sm-3 col-form-label" %>
      <div class="col-sm-6">
        <%= form.text_field :name, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group row">
      <%= form.label :パスワード, class: "col-sm-3 col-form-label" %>
      <div class="col-sm-6">
        <%= form.password_field :password, class: 'form-control' %>
      </div>
    </div>
    <%= form.submit("送信", class: 'btn btn-primary btn-lg my-1 mb-5 px-3') %>
<% end %>

<%= link_to 'アカウントをお持ちでない方はこちらをクリック', new_user_path %>