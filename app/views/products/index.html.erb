<p id="notice"><%= notice %></p>
<h1 class="label">商品一覧</h1>

<div><%= link_to '商品の新規作成', new_product_path %></div>

<table class="table">
  <thead>
    <tr>
      <th>商品名</th>
      <th>価格</th>
      <th>備考</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.productName %></td>
        <td><%= product.price %></td>
        <td><%= product.remark %></td>
        <td><%= link_to '詳細', product %>
        <%= link_to '編集', edit_product_path(product) %>
        <%= link_to '削除', product, method: :delete, data: { confirm: '本当に削除しますか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>