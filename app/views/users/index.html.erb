<p id="notice"><%= notice %></p>
<h1 class="label">会員名簿</h1>

<div><%= link_to "会員の新規登録", :new_user %>

<table class="table">
    <thead>
        <tr>
            <th>ユーザー名</th>
            <th>メールアドレス</th>
            <th>管理者</th>
            <th colspan="3"></th>
        </tr>
    </thead>
        <% @users.each do |user| %>
    <tbody>
        <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.administrator? ? "◯" : "-" %></td>
            <td><%= link_to "詳細", user %>
            <%= link_to '編集', edit_user_path(user) %>
            <%= link_to "削除", user, method: :delete, data: { confirm: "本当に削除しますか？" } %></td>
        </tr>
    </tbody>
        <% end %>
</table>