<!DOCTYPE html>
<html>
  <head>
    <title>StockApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <% if current_member %>
        <ul class-"account-menu" %>
          <%= current_member.name + "さん" %>
          <%= menu_link_to "ログアウト", :session,
            method: :delete, data: { confirm: "ログアウトしますか？" } %>
        </ul>
      <% else %>
        <%= link_to "ログイン", :new_session %>
      <% end %>

      <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #e3f2fd;">
        <a class="navbar-brand" href="/stocks">在庫管理システム</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item <%= 'active' if current_page?(root_path) %>"><%= link_to "在庫一覧", stocks_path %></li>
            <li class="nav-item <%= 'active' if current_page?(root_path) %>"><%= link_to "在庫新規登録", new_stock_path %></li>
            <li class="nav-item <%= 'active' if current_page?(root_path) %>"><%= link_to "商品一覧", products_path %></li>
            <li class="nav-item <%= 'active' if current_page?(root_path) %>"><%= link_to "商品新規登録", new_product_path %></li>
            <li class="nav-item <%= 'active' if current_page?(root_path) %>"><%= link_to "会員名簿", members_path %></li>
          </ul>
        </div>
      </nav>

      <%= yield %>
    </div>
  </body>
</html>
