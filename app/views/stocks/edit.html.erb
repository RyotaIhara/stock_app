<h1 class="label">在庫の編集</h1>

<%= form_with(model: @stock, local: true) do |form| %>
    <% if @stock.errors.any? %>
        <div id="error_explanation">
        <h4>エラーがあります:</h4>

        <ul>
            <% @stock.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
        </ul>
        </div>
    <% end %>

    <div class="form-group row">
        <%= form.label :productName, "商品名", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-4">
            <%= form.collection_select :product_id, Product.all, :id, :productName, {}, class: 'form-control' %>
        </div>
    </div>
    <div class="form-group row">
        <%= form.label :quantity, "個数", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-4">
            <%= form.text_field :quantity, class: 'form-control' %>
        </div>
    </div>

    <%= form.submit("更新", class: 'btn btn-primary btn-lg my-1 mb-5 px-3') %>
<% end %>

<%= link_to '詳細', @stock %> |
<%= link_to '在庫一覧に戻る', stocks_path %>