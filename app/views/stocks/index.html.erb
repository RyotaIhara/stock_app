<h1>在庫一覧</h1>

<div><%= link_to "在庫の新規入荷", :new_stock %>

<table border="1">
    <tr>
        <th>商品名</th>
        <th>単価</th>
        <th>個数</th>
        <th>操作</th>
        <th>削除</th>
    </tr>
        <% @stocks.each do |stock| %>
    <tr>
        <td><%= stock.productName %></td>
        <td><%= stock.price %></td>
        <td><%= stock.quantity %></td>
        <td><%= link_to "詳細", stock %></td>
        <td><%= link_to "削除", stock, method: :delete, data: { confirm: "本当に削除しますか？" } %></td>
    </tr>
        <% end %>
</table>