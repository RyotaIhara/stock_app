<div class="container">

<h1 class="label">在庫一覧</h1>

<table class="table">
    <tr>
        <th>商品名</th>
        <th>単価</th>
        <th>個数</th>
        <th>合計</th>
        <th>操作</th>
        <th>削除</th>
    </tr>
        <% @stocks.each do |stock| %>
    <tr>
        <td><%= stock.product.productName %></td>
        <td><%= stock.product.price %></td>
        <td><%= stock.quantity %></td>
        <td><%= stock.quantity * stock.product.price %></td>
        <td><%= link_to "詳細", stock %></td>
        <td><%= link_to "削除", stock, method: :delete, data: { confirm: "本当に削除しますか？" } %></td>
    </tr>
        <% end %>
</table>

<div><%= link_to "入荷および出荷", :new_stock %>
<div><%= link_to "商品一覧", :products %>

</div>