<p id="notice"><%= notice %></p>
<h1 class="label">会員の詳細</h1>

<%= link_to '編集', edit_member_path(@member) %> |
<%= link_to "会員一覧へ", :members %>

<table class="table">
    <tr>
        <th width="150">ユーザー名</th>
        <td><%= @member.name %></td>
    </tr>
    <tr>
        <th>メールアドレス</th>
        <td><%= @member.email %></td>
    </tr>
    <tr>
        <th>パスワード</th>
        <td><%= @member.password_digest %></td>
    </tr>
    <tr>
        <th>管理者</th>
        <td><%= @member.administrator? ? "◯" : "-" %></td>
    </tr>
</table>