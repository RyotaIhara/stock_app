<h1 class="label">会員名簿</h1>

<div><%= link_to "会員の新規登録", :new_member %>

<table class="table">
    <thead>
        <tr>
            <th>ユーザー名</th>
            <th>メールアドレス</th>
            <th>パスワード</th>
            <th>管理者</th>
            <th colspan="3"></th>
        </tr>
    </thead>
        <% @members.each do |member| %>
    <tbody>
        <tr>
            <td><%= member.name %></td>
            <td><%= member.email %></td>
            <td><%= member.password_digest %></td>
            <td><%= member.administrator? ? "◯" : "-" %></td>
            <td><%= link_to "詳細", member %>
            <%= link_to '編集', edit_member_path(member) %>
            <%= link_to "削除", member, method: :delete, data: { confirm: "本当に削除しますか？" } %></td>
        </tr>
    </tbody>
        <% end %>
</table>